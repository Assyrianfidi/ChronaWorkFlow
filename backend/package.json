{
  "name": "accubooks-backend",
  "version": "1.0.0",
  "description": "Enterprise-grade backend for AccuBooks",
  "type": "module",
  "main": "server.mjs",
  "scripts": {
    "start": "tsx server.ts",
    "start:health": "tsx health-server.ts",
    "start:prod": "node dist/server.js",
    "dev": "nodemon --exec tsx server.ts",
    "build": "tsc --project tsconfig.build.json",
    "build:prod": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "migrate": "npx prisma migrate deploy --schema prisma/schema.prisma",
    "migrate:dev": "npx prisma migrate dev --schema prisma/schema.prisma",
    "migrate:generate": "npx prisma generate --schema prisma/schema.prisma",
    "migrate:reset": "npx prisma migrate reset --schema prisma/schema.prisma",
    "migrate:status": "npx prisma migrate status --schema prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts",
    "db:generate": "npx prisma generate --schema prisma/schema.prisma",
    "db:push": "npx prisma db push --schema prisma/schema.prisma",
    "db:studio": "npx prisma studio --schema prisma/schema.prisma",
    "db:seed": "tsx prisma/seed.ts",
    "docker:build": "docker build -t accu-books-api .",
    "docker:run": "docker run -p 3000:3000 accu-books-api",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --verbose",
    "test:smoke": "tsx tests/smoke.test.ts",
    "test:watch": "cross-env NODE_ENV=test jest --config=jest.config.cjs --watch --runInBand --verbose",
    "test:smoke:staging": "cross-env NODE_ENV=staging STAGING_BASE_URL=http://localhost:4000 tsx tests/smoke/staging-smoke-tests.ts",
    "test:coverage": "cross-env NODE_ENV=test jest --config=jest.config.cjs --coverage",
    "test:unit": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --verbose --testPathPattern=__tests__/unit",
    "test:integration": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --verbose --testPathPattern=__tests__/integration",
    "test:e2e": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --verbose --testPathPattern=__tests__/e2e",
    "test:business-logic": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --testPathPattern=__tests__/business-logic",
    "test:performance": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --testPathPattern=__tests__/performance",
    "test:load": "node scripts/load-test.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --write .",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level=moderate",
    "prepare": "husky install || true",
    "postbuild": "node -e \"require('fs').cpSync('prisma', 'dist/prisma', {recursive:true}); require('fs').copyFileSync('package.json', 'dist/package.json')\"",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "logs": "tail -f logs/app.log",
    "monitor:metrics": "curl http://localhost:3000/api/metrics",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema prisma/schema.prisma",
    "prisma:seed": "ts-node --esm prisma/seed.mjs",
    "postinstall": "prisma generate --schema prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/glob": "^8.1.0",
    "bcryptjs": "^2.4.3",
    "bufferutil": "^4.1.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.1",
    "glob": "^11.1.0",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.9.3",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.11",
    "openai": "^6.15.0",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "puppeteer": "^23.11.1",
    "rate-limit-redis": "^4.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@faker-js/faker": "^10.1.0",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.24",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "babel-jest": "^30.2.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "prisma": "^5.22.0",
    "prisma-erd-generator": "^2.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.6",
    "ts-jest-mock-import-meta": "^1.3.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
