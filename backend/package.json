{
  "name": "accubooks-backend",
  "version": "1.0.0",
  "description": "Enterprise-grade backend for AccuBooks",
  "type": "module",
  "main": "server.mjs",
  "scripts": {
    "start": "node server.js",
    "start:prod": "node server.js",
    "dev": "nodemon --exec tsx src/server-simple.ts",
    "build": "tsc --noEmitOnError false || echo 'Build completed with warnings'",
    "build:prod": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "migrate": "npx prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:generate": "npx prisma generate",
    "migrate:reset": "npx prisma migrate reset",
    "migrate:status": "npx prisma migrate status",
    "seed": "tsx prisma/seed.ts",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "docker:build": "docker build -t accu-books-api .",
    "docker:run": "docker run -p 3000:3000 accu-books-api",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --config=jest.config.cjs --watch --runInBand --verbose",
    "test:coverage": "cross-env NODE_ENV=test jest --config=jest.config.cjs --coverage",
    "test:unit": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --verbose --testPathPattern=__tests__/unit",
    "test:integration": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --verbose --testPathPattern=__tests__/integration",
    "test:e2e": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --verbose --testPathPattern=__tests__/e2e",
    "test:business-logic": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --testPathPattern=__tests__/business-logic",
    "test:performance": "cross-env NODE_ENV=test jest --config=jest.config.cjs --runInBand --detectOpenHandles --testPathPattern=__tests__/performance",
    "test:load": "node scripts/load-test.js",
    "lint": "eslint src --ext .ts --no-eslintrc --config .eslintrc.json",
    "lint:fix": "eslint src --ext .ts --no-eslintrc --config .eslintrc.json --fix",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level=moderate",
    "prepare": "husky install || true",
    "postbuild": "node -e \"require('fs').cpSync('prisma', 'dist/prisma', {recursive:true}); require('fs').copyFileSync('package.json', 'dist/package.json')\"",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "logs": "tail -f logs/app.log",
    "monitor:metrics": "curl http://localhost:3000/api/metrics",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node --esm prisma/seed.mjs",
    "prisma:erd": "prisma generate",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "^11.2.3",
    "@prisma/client": "^5.22.0",
    "@types/glob": "^8.1.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.7",
    "exceljs": "^4.4.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.1",
    "glob": "^11.0.3",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "next-auth": "^4.24.7",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "puppeteer": "^23.11.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@faker-js/faker": "^10.1.0",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/testing": "^11.1.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.24",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "babel-jest": "^30.2.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "prisma": "^5.22.0",
    "prisma-erd-generator": "^2.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.6",
    "ts-jest-mock-import-meta": "^1.3.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
