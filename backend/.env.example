# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/accu_books
DB_POOL_TIMEOUT=30
DB_CONNECTION_LIMIT=10

# PostgreSQL Configuration (for Docker)
POSTGRES_DB=accu_books
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=accu-books
JWT_AUDIENCE=accu-books-users
JWT_COOKIE_EXPIRES_IN=7

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
COOKIE_DOMAIN=localhost
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Email Configuration (SendGrid Recommended)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=noreply@accubooks.com
EMAIL_FROM=noreply@accubooks.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_DESTINATION=uploads/

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health
ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_KEYS=10000
CACHE_CLEANUP_INTERVAL=600

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000
DEFAULT_PAGE_LIMIT=20
MAX_PAGE_LIMIT=100

# Feature Flags
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_2FA=false
FEATURE_AUDIT_LOGGING=true
FEATURE_ANALYTICS=true

# External Services
OPENAI_API_KEY=sk-xxxxx

# AUDIT FIX P2-5: Stripe Configuration (REQUIRED for billing)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_API_VERSION=2025-10-29
PAYMENT_PROVIDER=stripe
ANALYTICS_PROVIDER=google
CDN_URL=
WEBHOOK_URL=

# Performance Configuration
COMPRESSION_ENABLED=true
SLOW_QUERY_THRESHOLD=1000
MEMORY_THRESHOLD=500
CPU_THRESHOLD=80

# Monitoring Services (Production)
GRAFANA_PASSWORD=your_grafana_password
RATE_LIMIT_MAX=100 # limit each IP to 100 requests per windowMs

