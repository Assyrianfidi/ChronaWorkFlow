{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/worker",
    "rootDir": ".",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@server/*": ["./server/*"]
    }
  },
  "include": [
    "server/worker/**/*.ts",
    "server/utils/logger.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
