{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist/server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "lib": ["ES2020"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./server/*"],
      "shared/*": ["./shared/*"]
    },
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "server/production-server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "server/**/*test*.ts",
    "server/**/__tests__/**"
  ]
}
