# AccuBooks environment template
# Copy to .env (dev) / .env.production (prod) and inject secrets via your secrets manager.

NODE_ENV=development
HOSTNAME=0.0.0.0
PORT=5000

# Database
POSTGRES_DB=accubooks
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@localhost:5432/accubooks

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Auth / crypto
JWT_SECRET=
SESSION_SECRET=
NEXTAUTH_SECRET=change-me
COOKIE_SECRET=change-me
ENCRYPTION_KEY=change-me

# Billing / payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Banking
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_WEBHOOK_URL=

# Observability
SLOW_REQUEST_MS=1500

# Feature flags (global defaults; tenant-scoped flags are stored/checked server-side)
FEATURE_ANALYTICS_STEP8=false
FEATURE_ANALYTICS_STEP9_ROLLOUT=false
