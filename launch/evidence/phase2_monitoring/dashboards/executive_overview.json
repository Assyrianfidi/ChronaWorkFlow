{
  "dashboard": {
    "title": "AccuBooks Executive Overview",
    "description": "Real-time system health for executives",
    "refresh": "30s",
    "time_range": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Status",
        "type": "stat",
        "targets": [
          {
            "expr": "system_health_status",
            "legendFormat": "Health Status"
          }
        ],
        "thresholds": [
          { "value": 0, "color": "red" },
          { "value": 1, "color": "green" }
        ],
        "valueMappings": [
          { "value": 0, "text": "UNHEALTHY" },
          { "value": 1, "text": "HEALTHY" }
        ]
      },
      {
        "id": 2,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "active_users_concurrent",
            "legendFormat": "Active Users"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate (Last 1h)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "thresholds": [
          { "value": 0.1, "color": "yellow" },
          { "value": 1.0, "color": "red" }
        ],
        "yAxis": {
          "label": "Error Rate %",
          "max": 2
        }
      },
      {
        "id": 4,
        "title": "p95 Latency (Last 1h)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "p95 Latency"
          }
        ],
        "thresholds": [
          { "value": 500, "color": "yellow" },
          { "value": 1000, "color": "red" }
        ],
        "yAxis": {
          "label": "Latency (ms)",
          "max": 2000
        }
      },
      {
        "id": 5,
        "title": "Forecasts Generated (Last 24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(forecasts_generated_total[24h])",
            "legendFormat": "Total Forecasts"
          }
        ]
      },
      {
        "id": 6,
        "title": "Tier Distribution",
        "type": "pie",
        "targets": [
          {
            "expr": "sum by (tier) (forecasts_generated_total)",
            "legendFormat": "{{ tier }}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Recent Alerts (Last 24h)",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "legendFormat": "{{ alertname }}"
          }
        ],
        "columns": ["alertname", "severity", "priority", "description"]
      },
      {
        "id": 8,
        "title": "Database Pool Utilization",
        "type": "gauge",
        "targets": [
          {
            "expr": "db_pool_utilization_percent",
            "legendFormat": "Pool Utilization"
          }
        ],
        "thresholds": [
          { "value": 0, "color": "green" },
          { "value": 70, "color": "yellow" },
          { "value": 90, "color": "red" }
        ],
        "max": 100
      }
    ]
  }
}
