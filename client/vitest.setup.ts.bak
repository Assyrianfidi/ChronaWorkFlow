// Mock URL.createObjectURL
window.URL.createObjectURL = vi.fn().mockImplementation(() => 'blob:test');

// Mock window.URL.revokeObjectURL
window.URL.revokeObjectURL = vi.fn();

// Mock the clipboard API
Object.assign(navigator, {
  clipboard: {
    writeText: vi.fn(),
    readText: vi.fn(),
  },
