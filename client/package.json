    "input-otp": "^1.4.2",
    "lucide-react": "^0.300.0",
    "next": "^16.0.1",
    "next-auth": "^5.0.0-beta.30",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.1",
