    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/wouter": "^2.0.1",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
