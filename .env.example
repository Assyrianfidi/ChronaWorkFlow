## AccuBooks environment example (sanitized)
## Copy to .env (or .env.local) and fill sensitive values locally

# Database
DATABASE_URL=postgresql://postgres:<REDACTED_DB_PASSWORD>@localhost:5432/accubooks?schema=public

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<REDACTED_REDIS_PASSWORD>

# Server
NODE_ENV=development
PORT=3000
HOST=localhost

# Authentication
JWT_SECRET=<REDACTED_JWT_SECRET>
SESSION_SECRET=<REDACTED_SESSION_SECRET>
JWT_REFRESH_SECRET=<REDACTED_JWT_REFRESH_SECRET>

# Email (SMTP) - replace with your provider credentials
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=<REDACTED_SMTP_USER>
SMTP_PASS=<REDACTED_SMTP_PASS>
MAIL_FROM=no-reply@yourdomain.com

# Stripe (do NOT place live keys here; use test keys in CI securely)
STRIPE_SECRET_KEY=<REDACTED_STRIPE_SECRET>
STRIPE_PUBLISHABLE_KEY=<REDACTED_STRIPE_PUBLISHABLE>
STRIPE_WEBHOOK_SECRET=<REDACTED_STRIPE_WEBHOOK_SECRET>

# URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin
API_URL=http://localhost:3000/api
DOCS_URL=http://localhost:3000/docs

# Logging & monitoring
LOG_LEVEL=info
SENTRY_DSN=

# Notes
# - Replace all <REDACTED_...> placeholders with real secrets locally.
# - Do NOT check real .env files into source control.
