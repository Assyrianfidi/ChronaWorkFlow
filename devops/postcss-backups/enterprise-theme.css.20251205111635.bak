/**
 * AccuBooks Enterprise Theme v2.0
 * Ultra-Advanced Visual Design System with 60-144 FPS Optimization
 */

:root {
  /* Ultra-Advanced Color System */
  --color-primary: #3B82F6;
  --color-primary-rgb: 59, 130, 246;
  --color-secondary: #10B981;
  --color-secondary-rgb: 16, 185, 129;
  --color-accent: #6366F1;
  --color-accent-rgb: 99, 102, 241;
  
  /* Enhanced Dark Mode (OLED Black) */
  --color-oled-black: #000000;
  --color-oled-black-rgb: 0, 0, 0;
  --color-oled-surface: #0A0A0A;
  --color-oled-surface-rgb: 10, 10, 10;
  
  /* Advanced Gradient System */
  --gradient-primary-v2: linear-gradient(135deg, 
    rgba(59, 130, 246, 0.9) 0%, 
    rgba(99, 102, 241, 0.8) 50%, 
    rgba(139, 92, 246, 0.7) 100%);
  --gradient-secondary-v2: linear-gradient(135deg,
    rgba(16, 185, 129, 0.9) 0%,
    rgba(34, 197, 94, 0.8) 50%,
    rgba(52, 211, 153, 0.7) 100%);
  --gradient-stealth: linear-gradient(135deg,
    rgba(255, 255, 255, 0.03) 0%,
    rgba(255, 255, 255, 0.05) 50%,
    rgba(255, 255, 255, 0.03) 100%);
  
  /* Multi-Layer Glassmorphism */
  --glass-layer-1: rgba(255, 255, 255, 0.05);
  --glass-layer-2: rgba(255, 255, 255, 0.1);
  --glass-layer-3: rgba(255, 255, 255, 0.15);
  --glass-border: rgba(255, 255, 255, 0.18);
  --glass-shadow: rgba(0, 0, 0, 0.25);
  --glass-backdrop: blur(16px);
  
  /* Depth-Based Shadows */
  --shadow-depth-1: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow-depth-2: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-depth-3: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-depth-4: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  
  /* Ultra-Smooth Animation Variables */
  --transition-instant: 50ms cubic-bezier(0, 0, 0.1, 1);
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-smooth: 250ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-bounce: 400ms cubic-bezier(0.68, -0.55, 0.265, 1.55);
  --transition-epic: 600ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
  
  /* Performance Optimization */
  --will-change-transform: transform;
  --will-change-opacity: opacity;
  --will-change-auto: auto;
  
  /* Advanced Glow Effects */
  --glow-primary: 0 0 40px rgba(59, 130, 246, 0.4);
  --glow-secondary: 0 0 40px rgba(16, 185, 129, 0.4);
  --glow-accent: 0 0 40px rgba(99, 102, 241, 0.4);
  --glow-stealth: 0 0 20px rgba(255, 255, 255, 0.1);
  
  /* Reflective Surfaces */
  --reflectivity-low: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, transparent 50%);
  --reflectivity-medium: linear-gradient(135deg, rgba(255,255,255,0.3) 0%, transparent 50%);
  --reflectivity-high: linear-gradient(135deg, rgba(255,255,255,0.5) 0%, transparent 50%);
}

/* Dark Mode OLED Enhancement */
[data-theme="oled-dark"] {
  --color-background: var(--color-oled-black);
  --color-surface: var(--color-oled-surface);
  --glass-layer-1: rgba(255, 255, 255, 0.02);
  --glass-layer-2: rgba(255, 255, 255, 0.05);
  --glass-layer-3: rgba(255, 255, 255, 0.08);
  --glass-border: rgba(255, 255, 255, 0.1);
  --glass-shadow: rgba(0, 0, 0, 0.5);
}

/* Stealth Mode (Minimalistic Professional) */
[data-theme="stealth"] {
  --color-primary: #6B7280;
  --color-secondary: #4B5563;
  --color-accent: #9CA3AF;
  --gradient-primary-v2: var(--gradient-stealth);
  --gradient-secondary-v2: var(--gradient-stealth);
  --glass-layer-1: rgba(255, 255, 255, 0.02);
  --glass-layer-2: rgba(255, 255, 255, 0.03);
  --glass-layer-3: rgba(255, 255, 255, 0.04);
  --glass-border: rgba(255, 255, 255, 0.08);
  --glow-primary: var(--glow-stealth);
  --glow-secondary: var(--glow-stealth);
  --glow-accent: var(--glow-stealth);
}

/* Ultra-Advanced Glassmorphism Classes */
.glass-v2 {
  background: var(--glass-layer-2);
  backdrop-filter: var(--glass-backdrop);
  -webkit-backdrop-filter: var(--glass-backdrop);
  border: 1px solid var(--glass-border);
  box-shadow: var(--shadow-depth-2);
  position: relative;
  overflow: hidden;
  will-change: transform, opacity;
}

.glass-v2::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--reflectivity-medium);
  border-radius: inherit;
  opacity: 0.6;
  pointer-events: none;
}

.glass-v2::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 70%
  );
  border-radius: inherit;
  opacity: 0;
  transition: opacity var(--transition-smooth);
  pointer-events: none;
}

.glass-v2:hover::after {
  opacity: 1;
}

/* Depth-Based Glass Variants */
.glass-shallow {
  background: var(--glass-layer-1);
  box-shadow: var(--shadow-depth-1);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

.glass-medium {
  background: var(--glass-layer-2);
  box-shadow: var(--shadow-depth-2);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
}

.glass-deep {
  background: var(--glass-layer-3);
  box-shadow: var(--shadow-depth-3);
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
}

/* Advanced Glow Effects */
.glow-primary {
  box-shadow: var(--glow-primary);
  transition: box-shadow var(--transition-smooth);
}

.glow-primary:hover {
  box-shadow: 0 0 60px rgba(59, 130, 246, 0.6);
}

.glow-secondary {
  box-shadow: var(--glow-secondary);
  transition: box-shadow var(--transition-smooth);
}

.glow-secondary:hover {
  box-shadow: 0 0 60px rgba(16, 185, 129, 0.6);
}

.glow-accent {
  box-shadow: var(--glow-accent);
  transition: box-shadow var(--transition-smooth);
}

.glow-accent:hover {
  box-shadow: 0 0 60px rgba(99, 102, 241, 0.6);
}

/* Ultra-Smooth Page Transitions */
.page-transition-enter {
  opacity: 0;
  transform: translateX(20px) scale(0.95);
}

.page-transition-enter-active {
  opacity: 1;
  transform: translateX(0) scale(1);
  transition: opacity var(--transition-epic), transform var(--transition-epic);
}

.page-transition-exit {
  opacity: 1;
  transform: translateX(0) scale(1);
}

.page-transition-exit-active {
  opacity: 0;
  transform: translateX(-20px) scale(0.95);
  transition: opacity var(--transition-epic), transform var(--transition-epic);
}

/* Parallax Motion Layers */
.parallax-background {
  transform: translate3d(0, 0, -100px);
  filter: blur(20px);
  opacity: 0.05;
  will-change: transform;
}

.parallax-midground {
  transform: translate3d(0, 0, -50px);
  filter: blur(12px);
  opacity: 0.1;
  will-change: transform;
}

.parallax-foreground {
  transform: translate3d(0, 0, 0px);
  filter: blur(6px);
  opacity: 0.15;
  will-change: transform;
}

.parallax-interactive {
  transform: translate3d(0, 0, 50px);
  filter: blur(2px);
  opacity: 0.2;
  will-change: transform;
}

/* 60-144 FPS Optimized Animations */
@keyframes slide-up-v2 {
  from {
    opacity: 0;
    transform: translateY(30px) scale(0.98);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes slide-down-v2 {
  from {
    opacity: 0;
    transform: translateY(-30px) scale(0.98);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes fade-in-v2 {
  from { 
    opacity: 0;
    filter: blur(2px);
  }
  to { 
    opacity: 1;
    filter: blur(0px);
  }
}

@keyframes scale-in-v2 {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(10px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

@keyframes pulse-glow-v2 {
  0%, 100% {
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.4);
    transform: scale(1);
  }
  50% {
    box-shadow: 0 0 40px rgba(59, 130, 246, 0.6);
    transform: scale(1.02);
  }
}

@keyframes shimmer-v2 {
  0% {
    background-position: -2000px 0;
  }
  100% {
    background-position: 2000px 0;
  }
}

/* Hardware-Accelerated Animation Classes */
.animate-slide-up-v2 {
  animation: slide-up-v2 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  will-change: transform, opacity;
}

.animate-slide-down-v2 {
  animation: slide-down-v2 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  will-change: transform, opacity;
}

.animate-fade-in-v2 {
  animation: fade-in-v2 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  will-change: opacity, filter;
}

.animate-scale-in-v2 {
  animation: scale-in-v2 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  will-change: transform, opacity;
}

.animate-pulse-glow-v2 {
  animation: pulse-glow-v2 2s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  will-change: box-shadow, transform;
}

.animate-shimmer-v2 {
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.4),
    transparent
  );
  background-size: 2000px 100%;
  animation: shimmer-v2 2s infinite;
  will-change: background-position;
}

/* Advanced Hover Physics */
.hover-lift-v2 {
  transition: transform var(--transition-smooth), box-shadow var(--transition-smooth);
  will-change: transform, box-shadow;
}

.hover-lift-v2:hover {
  transform: translateY(-4px) scale(1.02);
  box-shadow: var(--shadow-depth-3);
}

.hover-scale-v2 {
  transition: transform var(--transition-smooth);
  will-change: transform;
}

.hover-scale-v2:hover {
  transform: scale(1.05);
}

.hover-rotate-v2 {
  transition: transform var(--transition-smooth);
  will-change: transform;
}

.hover-rotate-v2:hover {
  transform: rotate(2deg) scale(1.02);
}

/* Smooth Scroll Acceleration */
html {
  scroll-behavior: smooth;
  scroll-padding-top: 80px;
}

.smooth-scroll-container {
  scroll-behavior: smooth;
  scroll-snap-type: y mandatory;
}

.smooth-scroll-section {
  scroll-snap-align: start;
  scroll-snap-stop: always;
}

/* Performance Optimization */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
  
  .animate-slide-up-v2,
  .animate-slide-down-v2,
  .animate-fade-in-v2,
  .animate-scale-in-v2,
  .animate-pulse-glow-v2,
  .animate-shimmer-v2 {
    animation: none !important;
  }
}

/* High-FPS Optimizations */
@supports (backdrop-filter: blur(1px)) {
  .glass-v2 {
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
  }
}

/* Mobile Performance Optimizations */
@media (max-width: 768px) {
  .glass-v2 {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }
  
  .animate-slide-up-v2,
  .animate-slide-down-v2,
  .animate-fade-in-v2,
  .animate-scale-in-v2 {
    animation-duration: 0.2s;
  }
  
  .hover-lift-v2:hover {
    transform: translateY(-2px) scale(1.01);
  }
  
  .hover-scale-v2:hover {
    transform: scale(1.02);
  }
}

